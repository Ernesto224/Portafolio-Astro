---
import ProjectCard from "../ui/ProjectCard.astro";
import { getLenguageObject } from "../../utils/LenguageText";

const textItems = getLenguageObject()?.projects;
---

<section id="projects" class="py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <h3 class="text-3xl font-light mb-2 text-purpura-suave">{textItems?.h3}</h3>
    <h2 class="text-5xl font-light leading-16 text-texto-claro-principal mb-8">
      {textItems?.h2}
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        textItems?.cardItems.map((item) => (
          <ProjectCard
            title={item.title}
            state={item.state}
            imageSrc={item.imageSrc}
            gitHref={item.gitHref}
            deployHref={item.deployHref}
          />
        ))
      }
    </div>

    <div class="flex justify-center mt-8">
      <a
        class="col-start-1 row-start-1 flex w-[90%] items-stretch gap-4 text-center border
          border-enlaces-iconos text-enlaces-iconos
          hover:border-azul-nebulosa hover:text-azul-nebulosa
          focus:border-estado-clic focus:text-estado-clic rounded-full hvr-float"
        href="https://github.com/Ernesto224"
      >
        <span class="flex flex-1 items-center justify-center self-center p-1">
          {textItems?.endButtom}
          <i class="icon-[lucide--github] w-10 h-10 ml-2"></i>
        </span>
      </a>
    </div>
  </div>
</section>
