---
import ContactForm from "../react/ContactForm.tsx";
import { getLenguageObject } from "../../utils/LenguageText";

const textItems = getLenguageObject()?.contact;
---

<section id="contact" class="w-full py-12 border-t border-[#ffffff10]">
  <div class="max-w-5xl mx-auto">
    <h3 class="text-3xl font-light mb-2 text-purpura-suave">{textItems?.h3}</h3>
    <h2 class="text-5xl font-light mb-6 leading-16 text-texto-claro-principal mt-3">
      {textItems?.h2}
    </h2>
    <div
      class="container mx-auto px-6 lg:px-0 max-w-6xl grid grid-cols-1 lg:grid-cols-2 gap-8 items-start"
    >
      <div>
        <p
          class="text-[1.2rem] font-light text-texto-principal-suave leading-7 mt-4"
        >
          {textItems?.p}
        </p>
      </div>

      <div>
        <ContactForm client:visible />
      </div>
    </div>
  </div>
</section>
