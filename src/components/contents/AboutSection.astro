---
import AccordionItem from "../ui/AccordionItem.astro";
import LetterGlitch from "../react/LetterGlitch.tsx";
import { getLenguageObject } from "../../utils/LenguageText";

const textItems = getLenguageObject()?.about;
const accordionItems = textItems?.accordionItemsText;
---

<div id="about" class="flex flex-col lg:flex-row items-center gap-6">
  <div class="container">
    <div>
      <h3 class="text-3xl font-light mb-2 text-purpura-suave">
        {textItems?.h3}
      </h3>
      {
        accordionItems!.map((item) => (
          <AccordionItem icon={item.icon} title={item.title} text={item.text} />
        ))
      }
    </div>
  </div>

  <div
    class="flex justify-center md:w-full md:h-[270px] size-[270px] pt-3 md:pt-6"
  >
    <LetterGlitch
      client:load
      glitchColors={["#176BED", "#4F8CF0", "#1C1C29"]}
      glitchSpeed={33}
      centerVignette={true}
      outerVignette={true}
      smooth={true}
    />
  </div>
</div>
