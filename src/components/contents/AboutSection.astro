---
import AccordionItem from "../ui/AccordionItem.astro";
import LetterGlitch from "../react/LetterGlitch.tsx";

const accordionItems = [
  {
    icon: "icon-[material-symbols-light--web]",
    title: "Web Development",
    text: "Static web developments Reactive web developments Microservices architectures REST APIs Mobile developments Portfolios",
  },
  {
    icon: "icon-[material-symbols-light--web]",
    title: "Web Development",
    text: "Static web developments Reactive web developments Microservices architectures REST APIs Mobile developments Portfolios",
  },
  {
    icon: "icon-[material-symbols-light--web]",
    title: "Web Development",
    text: "Static web developments Reactive web developments Microservices architectures REST APIs Mobile developments Portfolios",
  },
];
---

<div id="about" class="pt-10">
  <div
    class="container mx-auto px-6 lg:px-0 max-w-6xl grid grid-cols-1 lg:grid-cols-2 gap-8 items-end"
  >
    <div>
      <h3 class="text-3xl font-light text-purpura-suave">More about me</h3>
      <h2 class="text-5xl font-light leading-16 text-texto-claro-principal">
        About
      </h2>

      {
        accordionItems.map((item) => (
          <AccordionItem icon={item.icon} title={item.title} text={item.text} />
        ))
      }
    </div>

    <div>
      <LetterGlitch
        client:load
        glitchColors={["#176BED", "#4F8CF0", "#1C1C29"]}
        glitchSpeed={33}
        centerVignette={true}
        outerVignette={true}
        smooth={true}
      />
    </div>
  </div>
</div>
