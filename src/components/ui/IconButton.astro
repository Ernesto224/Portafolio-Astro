---
import type { IconButtonProps } from "../../types/types.ts";

const {
  href = "#",
  label = "",
  ariaLabel = label,
} = Astro.props as IconButtonProps;
---

<a
  class="inline-flex items-center justify-center h-12 gap-2 p-1.5 rounded-lg border
   border-enlaces-iconos text-enlaces-iconos
   hover:border-azul-nebulosa hover:text-azul-nebulosa
   focus:border-estado-clic focus:text-estado-clic hvr-float"
  href={href}
  aria-label={ariaLabel}
  title={label}
>
  <slot />
</a>
